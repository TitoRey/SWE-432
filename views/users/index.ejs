<div class="container">
  <div class="datatable-container">
    <h1>Users</h1>
    <table id="users" class="table">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%- user.name %></td>
            <td><%- user.email %></td>
            <td><%- roleNames[user.role] %></td>
            <td><a href=<%- `/users/${user.id}/edit` %> class="btn btn-radio">Edit</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>