<!DOCTYPE html>
<html>

<head>
  <title>Log in</title>
  <link rel="stylesheet" type="text/css" href="/public/styles_producer.css">
  <script src="/public/scripts_producer.js"></script>
  <style>
    body {
      background-color: #000;
      color: #fff;
      font-family: "Noto Sans", sans-serif;
      font-size: 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .center-heading {
      text-align: center;
      margin: 0;
      margin-bottom: 20px;
    }

    h1 {
      font-size: 36px;
      font-weight: bold;
      color: #fff;
    }

    .form-container {
      text-align: center;
    }

    form {
      font-size: 30px;
      width: 350px;
      padding: 5px;
      background-color: #1db99f;
      color: #fff;
      text-align: center;
    }

    a {
      font-size: 16px;
      color: #fff;
      text-decoration: none;
    }

    a:hover {
      color: rgb(0, 255, 13);
    }
  </style>
</head>

<body>
  <h1 class="center-heading">Log in - Producer</h1>

  <div class="form-container">
    <form id="myForm" action="/" method="post" onsubmit="return validateForm()">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
      <br>

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required>
      <br>

      <input type="submit" value="Submit">
    </form>
  </div>

  <p id="formMessage"></p>

  <a href="/index1_producer">Next Page</a>
  <script>
    function validateForm() {
      var emailInput = document.getElementById('email');
      var emailValue = emailInput.value.trim();

      var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!emailPattern.test(emailValue)) {
        alert('Please enter a valid email address.');
        return false;
      }
      alert("The form was submitted successfully, you can go to the next page!");
      window.location.href = "/index1_producer";
      return true; 
    }
  </script>

</body>

</html>