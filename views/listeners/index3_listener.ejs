<!DOCTYPE html>
<html lang="en">

<head>
    <title>Website</title>
    <style>
        body {
            background-color: #000;
            color: #fff;
            font-family: "Noto Sans", sans-serif;
            font-size: 20px;
            margin: 50px;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-gap: 20px;
            height: 60vh; 
            background-image: url('https://images.unsplash.com/photo-1558407483-37b8bf9bef06?crop=entropy&cs=srgb&fm=jpg&ixid=M3wzMjM4NDZ8MHwxfHJhbmRvbXx8fHx8fHx8fDE2OTY0NTU4MDF8&ixlib=rb-4.0.3&q=85');
            background-size: cover;
            background-position: bottom;
            background-repeat: no-repeat;
        }

        .center-heading {
            text-align: center;
            grid-column: span 2;
        }

        .section {
            padding: 20px;
            border: 1px solid #fff;
            border-radius: 10px;
        }

        h2 {
            text-align: center;
            color: #1db99f;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid #fff;
        }

        th {
            background-color: #1db99f;
            color: #fff;
        }

        select {
            font-size: 20px;
            width: 275px;
            padding: 5px;
            background-color: #1db99f;
            color: #fff;
            margin-right: 10px;
        }

        button {
            font-size: 24px;
            padding: 10px;
            background-color: #1db99f;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: rgb(0, 255, 13);
        }

        a {
            font-family: "Noto Sans", sans-serif;
            font-size: 24px;
            color: #fff;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
        }

        a:hover {
            color: rgb(0, 255, 13);
        }

         #button {
  display: inline-block;
  padding: 10px 20px;
  background-color: #1db99f;
  color: #fff;
  text-decoration: none;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
    #button:hover {
      background-color: rgb(0, 255, 13);
}
    </style>
</head>

<body>
    <h1 class="center-heading">Selected Playlist</h1>

    <div class="section">
        <h2>All songs</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Duration (min)</th>
                <th>Artist</th>
                
            </tr>
            <% playlist.forEach(function(song) { %>
            <tr>
                <td><%= song.title %></td>
                <td><%= song.duration %></td>
                <td><%= song.artist %></td>
            </tr>
            <% }); %>
        </table>
    </div>

    <div class="section">
        <h2>Delete a song</h2>
        <form id="deleteForm">
            <select id="select1" name="selectedSongToDelete">
                <% playlist.forEach(function(song) { %>
                <option value="<%= song._id %>">
                    <%= song.title %>
                </option>
                <% }); %>
            </select>
            <button type="submit" id="deleteButton">Delete Song</button>
        </form>
        <a href="/listeners" id = "button">Add a new song</a>
    </div>

    <script>
        document.getElementById('deleteForm').addEventListener('submit', async function (event) {
            event.preventDefault();

            const button = document.getElementById("deleteButton");
            button.textContent = "Deleting Song...";

            const formData = new FormData(this);
            const selectedSongToDelete = formData.get('selectedSongToDelete');

            try {

                const response = await fetch('/deleteSongFromPlaylist', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        selectedSongToDelete,
                    }),
                });

                if (!response.ok) {
                    throw new Error('Failed to delete song');
                }

                console.log('Song deleted successfully:', selectedSongToDelete);

                window.location.reload();

                button.textContent = "Delete Song";
            } catch (error) {
                console.error('Error deleting song:', error);
                button.textContent = "Delete Song";
            }
        });
    </script>
</body>

</html>
