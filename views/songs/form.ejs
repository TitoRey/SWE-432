<div class="container">
  <div class="form-container">
    <h1>New Song</h1>
    <form action="/songs" method="post">
      <fieldset>
        <div class="form-group">
          <label>Title</label>
          <input type="text" name="title" class="form-control" placeholder="Enter Title" required>
        </div>
        <div class="form-group">
          <label>Artist</label>
          <input type="text" name="artist" class="form-control" placeholder="Artist Name" required>
        </div>
        <div class="form-group">
          <label>Genre</label>
          <input type="text" name="genre" class="form-control" placeholder="Genre Name" required>
        </div>
        <button type="submit" class="btn btn-radio">Create</button>
      </fieldset>
    </form>
  </div>
</div>